set term svg background rgb "white"
set out "plot_err.svg"
set xlabel "N"
set xlabel font "Helvetica, 16"
set ylabel "Error"
set ylabel font "Helvetica, 16"
set title "Checking that the MC error behaves as intended"
set title font "Helvetica Bold, 16"
set autoscale
set grid
set key right top
plot \
  "Error.txt" using 1:2 with lines title "Monte Carlo Error",\
  "Error.txt" using 1:3 with lines title "(1/sqrt(N))"